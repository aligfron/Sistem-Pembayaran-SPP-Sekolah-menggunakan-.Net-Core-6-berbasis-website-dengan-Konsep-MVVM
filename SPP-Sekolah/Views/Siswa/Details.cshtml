@model VMTbMSiswa?
@{
    Layout = null;
}

<div class="card">
    <div class="card-body">
        @{
            if (Model != null)
            {
                <div class="card-title row">
                    <div class="col-4">Nama Lengkap</div>
                    <div class="col-8">@Model.Fullname</div>
                </div>
                <div class="card-title row">
                    <div class="col-4">Nama Kelas</div>
                    <div class="col-8">@Model.NamaKelas</div>
                </div>
                <div class="card-title row">
                    <div class="col-4">Nama Jurusan</div>
                    <div class="col-8">@Model.NamaJurusan</div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-2">Create By</div>
                    <div class="col-4">@Model.CreatedBy</div>
                    <div class="col-2">Update By</div>
                    <div class="col-4">@Model.ModifiedBy</div>
                </div>
                <div class="row">
                    <div class="col-2">Create Date</div>
                    <div class="col-4">@Model.CreatedOn</div>
                    <div class="col-2">Update Date</div>
                    <div class="col-4">@Model.ModifiedOn</div>
                </div>
            }
        }
        
    </div>
</div>
<script>
    $("#staticModalLgLabel").text("@ViewBag.Title");
</script>